.user-info p {
  color: var(--gray-600);
  font-size: 0.875rem;
}

.dashboard-actions {
  display: flex;
  gap: var(--space-3);
}

.profile-btn,
.logout-btn {
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-lg);
  border: none;
  cursor: pointer;
  font-weight: 500;
  transition: all var(--transition-fast);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.profile-btn {
  background: var(--gray-100);
  color: var(--gray-700);
}

.profile-btn:hover {
  background: var(--gray-200);
  transform: translateY(-1px);
}

.logout-btn {
  background: var(--error-500);
  color: white;
}

.logout-btn:hover {
  background: var(--error-600);
  transform: translateY(-1px);
}

.dashboard-content {
  max-width: 1400px;
  margin: 0 auto;
}

/* Profile Styles */
.profile-container {
  max-width: 800px;
  margin: 0 auto;
  padding: var(--space-6);
  min-height: 100vh;
  background: linear-gradient(135deg, var(--primary-50) 0%, var(--secondary-50) 100%);
}

.profile-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
  margin-bottom: var(--space-8);
}

.profile-header-left,
.profile-header-right {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.back-btn {
  background: var(--gray-100);
  color: var(--gray-700);
  border: none;
  padding: var(--space-3) var(--space-4);
  border-radius: var(--radius-lg);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.back-btn:hover {
  background: var(--gray-200);
  transform: translateY(-1px);
}

.profile-header h1 {
  font-family: var(--font-heading);
  font-size: 2rem;
  font-weight: 700;
  color: var(--gray-800);
}

.profile-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-2xl);
  padding: var(--space-10);
  box-shadow: var(--shadow-xl);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.profile-avatar-section {
  text-align: center;
  margin-bottom: var(--space-8);
  padding-bottom: var(--space-8);
  border-bottom: 1px solid var(--gray-200);
}

.profile-avatar-large {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  overflow: hidden;
  border: 4px solid var(--primary-200);
  background: var(--primary-100);
  margin: 0 auto var(--space-4);
}

.profile-avatar-large img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-placeholder-large {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--primary-500) 0%, var(--secondary-500) 100%);
  color: white;
  font-weight: 700;
  font-size: 3rem;
}

.profile-form-section form {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.account-info {
  background: var(--gray-50);
  border-radius: var(--radius-lg);
  padding: var(--space-5);
  margin: var(--space-6) 0;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--space-2) 0;
  border-bottom: 1px solid var(--gray-200);
}

.info-row:last-child {
  border-bottom: none;
}

.info-row label {
  font-weight: 600;
  color: var(--gray-700);
}

.info-row span {
  color: var(--gray-600);
}

.status.active {
  color: var(--success-500);
  font-weight: 600;
}

.status.inactive {
  color: var(--error-500);
  font-weight: 600;
}

.profile-actions {
  display: flex;
  gap: var(--space-4);
  justify-content: center;
  margin-top: var(--space-8);
}

.save-btn,
.edit-btn,
.cancel-btn {
  padding: var(--space-4) var(--space-6);
  border-radius: var(--radius-lg);
  font-weight: 600;
  cursor: pointer;
  transition: all var(--transition-fast);
  border: none;
  min-width: 120px;
}

.save-btn {
  background: linear-gradient(135deg, var(--primary-600) 0%, var(--secondary-600) 100%);
  color: white;
}

.save-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.edit-btn {
  background: var(--primary-500);
  color: white;
}

.edit-btn:hover {
  background: var(--primary-600);
  transform: translateY(-2px);
}

.cancel-btn {
  background: var(--gray-200);
  color: var(--gray-700);
}

.cancel-btn:hover {
  background: var(--gray-300);
  transform: translateY(-2px);
}

/* Notification Styles */
.notification {
  position: fixed;
  top: var(--space-6);
  right: var(--space-6);
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--space-4) var(--space-6);
  box-shadow: var(--shadow-xl);
  border-left: 4px solid var(--success-500);
  z-index: 1000;
  display: flex;
  align-items: center;
  gap: var(--space-3);
  max-width: 400px;
  animation: slideIn 0.3s ease-out;
}

.notification.error {
  border-left-color: var(--error-500);
}

.notification-icon {
  font-size: 1.2rem;
}

.notification-close {
  background: none;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  color: var(--gray-400);
  padding: var(--space-1);
  border-radius: var(--radius-sm);
  transition: all var(--transition-fast);
  margin-left: auto;
}

.notification-close:hover {
  color: var(--gray-600);
  background: var(--gray-100);
}

@keyframes slideIn {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  
  .dashboard-header {
    flex-direction: column;
    gap: var(--space-4);
    text-align: center;
  }
  
  .user-welcome {
    flex-direction: column;
    text-align: center;
  }
  
  .profile-container {
    padding: var(--space-4);
  }
  
  .profile-content {
    padding: var(--space-6);
  }
  
  .profile-actions {
    flex-direction: column;
  }
  
  .notification {
    top: var(--space-4);
    right: var(--space-4);
    left: var(--space-4);
    max-width: none;
  }
}

/* Profile Input States */
.readonly-input {
  background: var(--gray-50) !important;
  border-color: var(--gray-200) !important;
  color: var(--gray-600) !important;
  cursor: default !important;
  font-weight: 500;
  pointer-events: none;
}

.readonly-input:focus {
  box-shadow: none !important;
  border-color: var(--gray-200) !important;
  outline: none !important;
}

.editable-input {
  background: white !important;
  border-color: var(--primary-300) !important;
  color: var(--gray-800) !important;
  cursor: text !important;
  pointer-events: auto !important;
  box-shadow: 0 0 0 1px rgba(14, 165, 233, 0.2) !important;
}

.editable-input:focus {
  border-color: var(--primary-500) !important;
  box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.2) !important;
  outline: none !important;
}

.editable-input:hover {
  border-color: var(--primary-400) !important;
}

/* Profile Form Enhanced Styles */
.profile-form-section .form-group {
  position: relative;
}

.profile-form-section .form-group label {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  margin-bottom: var(--space-3);
  font-weight: 600;
  color: var(--gray-700);
}

.profile-form-section .form-group label::after {
  content: '';
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--gray-300);
  transition: all var(--transition-fast);
}

.profile-form-section .form-group:has(.editable-input) label::after {
  background: var(--primary-500);
  box-shadow: 0 0 0 2px rgba(14, 165, 233, 0.2);
}

/* Edit Mode Indicator */
.profile-content.editing {
  border: 2px solid var(--primary-200);
  box-shadow: 0 0 0 4px rgba(14, 165, 233, 0.1);
}

.profile-content.editing::before {
  content: '‚úèÔ∏è Edit Mode Active';
  position: absolute;
  top: -15px;
  left: var(--space-6);
  background: var(--primary-500);
  color: white;
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-lg);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}
