/* NOTIFICATION MODAL STYLES */
/* ============================================ */
.notification-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: transparent;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 2rem;
  z-index: 9999;
  pointer-events: none;
}

.notification-modal {
  background: white;
  border-radius: 12px;
  padding: 1.5rem 2rem;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  border: 2px solid;
  animation: slideInDown 0.3s ease-out, fadeOut 0.3s ease-in 1.7s forwards;
  min-width: 300px;
  max-width: 500px;
  pointer-events: auto;
}

.notification-modal.success {
  border-color: #22c55e;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
}

.notification-modal.error {
  border-color: #ef4444;
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
}

.notification-modal.warning {
  border-color: #f59e0b;
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
}

.notification-content {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.notification-icon {
  font-size: 1.5rem;
  font-weight: bold;
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.notification-modal.success .notification-icon {
  background: #22c55e;
  color: white;
}

.notification-modal.error .notification-icon {
  background: #ef4444;
  color: white;
}

.notification-modal.warning .notification-icon {
  background: #f59e0b;
  color: white;
}

.notification-message {
  font-size: 1rem;
  font-weight: 500;
  color: #1f2937;
  line-height: 1.5;
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-100px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeOut {
  from {
    opacity: 1;
    transform: translateY(0);
  }
  to {
    opacity: 0;
    transform: translateY(-20px);
  }
}

/* Mobile notification adjustments */
@media (max-width: 767px) {
  .notification-modal-overlay {
    padding: 1rem;
    padding-top: 1rem;
  }
  
  .notification-modal {
    min-width: auto;
    width: 100%;
    max-width: calc(100vw - 2rem);
    padding: 1rem 1.5rem;
  }
  
  .notification-content {
    gap: 0.75rem;
  }
  
  .notification-icon {
    width: 1.5rem;
    height: 1.5rem;
    font-size: 1.2rem;
  }
  
